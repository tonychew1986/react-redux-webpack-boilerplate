@import 'vars.styl'

@import 'Home.styl'

@import url('https://fonts.googleapis.com/css?family=Raleway:300,400,600,700,900');
@import url('https://fonts.googleapis.com/css?family=Unica+One');
@import url('https://fonts.googleapis.com/css?family=Berkshire+Swash');
@import url('https://fonts.googleapis.com/css?family=Barlow+Semi+Condensed');

*
  box-sizing border-box

body
  overflow hidden

  font-family 'Raleway', sans-serif
  background-attachment fixed
  color darken(white, 15%)
  font-size 14px
  margin 0px
  padding 0px

html, body {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

body > div {
    height: 100%;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
}

h1
  margin 20px 0

a
  padding 0px
  text-decoration none
  color inherit

input
  width 100%
  font-size: 14px;
  padding: 10px 15px;
  margin 5px 0px 10px 0px

pre
  font-family mono
  line-height 1.5
  border-radius 3px
  border 1px solid border-gray

button
  outline none
  border none
  padding 10px 15px
  border-radius 2px
  text-transform uppercase
  font-size 12px
  font-weight bold
  width 100%
  background-color #1A33CC
  color white
  cursor pointer

  &:hover
    background-color darken(#1A33CC, 10%)

button.negative
  background-color #999

  &:hover
    background-color darken(#999, 10%)

.hidden
  display none

.num
  font-family: 'Barlow Semi Condensed', sans-serif;

.page
  //padding 20px
  //padding-top 80px
  position absolute
  top 0px
  width 100%

.siteTitle
  display flex
  align-items center


  img
    display inline-block
    width 80px
    height 80px
    margin-right 20px


.hl
  font-weight bold
  color react-blue

.clear
  clear both

.hide
  display none

.App
  min-width 320px
  height 100%
  position absolute
  width 100%
  background #000
  background linear-gradient(-180deg , #000 0%, #111 50%)

  h1
    color react-blue
    font-weight 300
    font-size 52px

  p
    color white

  .paragraphMain
    font-weight bold
    font-size 16px

.backgroundGreen
  background green
  background linear-gradient(-180deg , green 0%, #b4da55 50%)

.backgroundYellow
  background yellow
  background linear-gradient(-180deg , yellow 0%, orange 50%)

.backgroundRed
  background #6A1B9A
  background linear-gradient(-180deg , #6A1B9A 0%, #7E57C2 50%)

.pageWrapper
  position relative
  width 100%

.pageWrapperScroll
  position absolute !important
  width calc(100% - 40px) !important
  height calc(100% - 125px) !important
  //height 400px
  overflow-y scroll


.homeThreatInfoPopup
  display none
  position absolute
  width 100%
  height 100%
  background-color rgba(0,0,0,0.8)
  padding 10px 20px
  z-index 5
  box-shadow: 0px 0px 15px #333;

  .homeThreatInfoPopupContent
    padding 15px

  .homeThreatInfoPopupClose
    position absolute
    top 10px
    right 10px
    cursor pointer

  .homeThreatInfoPopupTitle
    font-weight bold
    font-size 16px
    margin-bottom 5px

  .homeThreatInfoPopupDescription
    max-height: 300px;
    overflow-y: auto;
    margin-bottom 10px

.homeThreatInfoPopupShow
  display block


.nav
  position relative
  background darken(black, 10%)

  .navExpand
    transform: translateX(190px);

  .navClose
    transform: translateX(0px);

  .navDepth
    z-index 999

  .navInner
    position fixed
    width 100%
    height 100%
    transition all 0.3s ease-in-out 0s
    visibility 0s linear 0.3s
    z-index 0s linear 0.01s
    //pointer-events none

    .navTop
      position absolute
      top 0px
      left 0px
      width calc(100% + 6px)
      height 70px
      background-color rgba(0,0,0,0.1)
      margin-left -6px

      .navTopLogo
        float left
        width 60%
        text-align center
        margin-top 7px

      .navTopMenu
        float left
        width 20%
        padding 15px 25px
        cursor pointer
        margin-top 4px

      .navTopAdd
        float right
        width 20%
        padding 15px 25px
        cursor pointer
        margin-top 4px
        text-align right

    .navSide
      position fixed
      top 0px
      left 0px
      width 190px
      height 100%
      background-color #1A55CC
      margin-left -196px
      z-index 999
      box-shadow: 0px 0px 5px #333;

      .navSideCore
        a
          display inline-block
          padding 10px 20px
          text-transform uppercase
          text-decoration none
          color darken(white, 20%)
          width 100%

          &:hover
            color white

        .active
          background-color rgba(0,0,0,0.2)
          font-weight bold

        .navSideHeader
          height 90px
          padding 20px
          text-align center
          background-color rgba(0,0,0,0.4)

      .navSideLogout
        position absolute
        bottom 20px
        width calc(100% - 40px)
        padding 10px 15px
        background-color white
        border-radius 2px
        margin 5px 20px
        text-align center
        text-transform uppercase
        cursor pointer
        color black
        font-weight bold



.tickerWrapper
  position fixed
  bottom 0px
  width 100%
  background-color black
  padding 5px 10px 7px 10px
  overflow hidden
  padding-left 100%
  opacity 0.8

@-webkit-keyframes ticker {
  0% {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
    visibility: visible;
  }

  100% {
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0);
  }
}

@keyframes ticker {
  0% {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
    visibility: visible;
  }

  100% {
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0);
  }
}


.ticker {

  display: inline-block;
  white-space: nowrap; // display items in a line
  padding-right: 500px; // ensure items go before animations repeat (taken from parent due to inline-block)

  -webkit-animation-iteration-count: infinite;
          animation-iteration-count: infinite;
  -webkit-animation-timing-function: linear;
          animation-timing-function: linear;
 -webkit-animation-name: ticker;
         animation-name: ticker;
  -webkit-animation-duration: 60s;
          animation-duration: 60s;

  &__item {

    display: inline-block;
    padding 0px 10px
    color: white;

  }

}
